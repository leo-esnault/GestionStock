@model Modele

<form method="post" asp-action="SuppressionPOST">
    <input asp-for="Reference" hidden />    
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Supprimer un Modèle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Reference">Référence</label>
            <input asp-for="Reference" disabled class="form-control" />
            <span asp-validation-for="Reference" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Nom">Nom</label>
            <input asp-for="Nom" disabled class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DureeGarantie">Durée de garantie</label>
            <input asp-for="DureeGarantie" disabled class="form-control" />
            <span asp-validation-for="DureeGarantie" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Supprimer</button>
        <a asp-controller="Modele" asp-action="Index" class="btn btn-secondary" style="width:150px">Retour à la Liste</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
