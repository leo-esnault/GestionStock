@model IEnumerable<Modele>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Liste des modèles</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Modele" asp-action="Creation" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Créer un modèle
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Reference
            </th>
            <th>
                Nom
            </th>
            <th>
                Durée Garantie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="35%">
                    @obj.Reference
                </td>
                <td width="30%">
                    @obj.Nom
                </td>
                <td>
                    @obj.DureeGarantie
                </td>
                <td width="10%">
                    <div class="w-20 btn-group" role="group">
                        <a asp-controller="Modele" asp-action="Modification" asp-route-reference="@obj.Reference" class="btn btn-primary btn-sm mx-1"> <i class="bi bi-pencil-square"></i></a>
                    </div>
                    <div class="w-20 btn-group" role="group">
                        <a asp-controller="Modele" asp-action="Suppression" asp-route-reference="@obj.Reference" class="btn btn-danger btn-sm mx-1"> <i class="bi bi-trash3-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

