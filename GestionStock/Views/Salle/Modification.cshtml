@model Salle

<form method="post" asp-action="Modification">
    <input asp-for="Nom" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Modifier une Salle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nom">Nom</label>
            <input asp-for="Nom" disabled class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Nom_Batiment">Nom</label>
            <select asp-for="Nom_Batiment" class="form-control" asp-items="ViewBag.Nom_Batiment"></select>
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Modifier</button>
        <a asp-controller="Modele" asp-action="Index" class="btn btn-secondary" style="width:150px">Retour à la Liste</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
